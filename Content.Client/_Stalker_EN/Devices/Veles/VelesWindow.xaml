<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      xmlns:veles="clr-namespace:Content.Client._Stalker_EN.Devices.Veles"
                      xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
                      Title="{Loc 'veles-window-title'}"
                      MinSize="420 450"
                      SetSize="420 450">
    <BoxContainer Orientation="Vertical" Margin="5">
        <!-- Header Section -->
        <PanelContainer Margin="0 0 0 5">
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#0A150A" BorderColor="#1A3A1A" BorderThickness="1" />
            </PanelContainer.PanelOverride>
            <Label Text="{Loc 'veles-header-label'}"
                   HorizontalAlignment="Center"
                   Margin="5"
                   FontColorOverride="#3A8A3A" />
        </PanelContainer>

        <!-- Radar Section -->
        <PanelContainer VerticalExpand="True" Margin="0 0 0 5">
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#050A05" BorderColor="#1A3A1A" BorderThickness="1" />
            </PanelContainer.PanelOverride>
            <veles:VelesRadarControl Name="RadarControl"
                                     HorizontalExpand="True"
                                     VerticalExpand="True"
                                     Margin="5" />
        </PanelContainer>

        <!-- Controls Section -->
        <PanelContainer>
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#0A150A" BorderColor="#1A3A1A" BorderThickness="1" />
            </PanelContainer.PanelOverride>
            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" Margin="5">
                <Button Name="AnomalyDetectorButton"
                        Text="{Loc 'veles-button-anomaly-detector-off'}"
                        MinWidth="160"
                        Margin="5 0 5 0" />
                <Button Name="ArtifactScannerButton"
                        Text="{Loc 'veles-button-artifact-scanner-off'}"
                        MinWidth="160"
                        Margin="5 0 5 0" />
            </BoxContainer>
        </PanelContainer>
    </BoxContainer>
</controls:FancyWindow>
