<controls:FancyWindow xmlns="https://spacestation14.io"
                      xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
                      Title="{Loc 'st-radio-headset-menu-title'}"
                      MinSize="140 120"
                      SetSize="140 120">
    <BoxContainer Orientation="Vertical"
                  HorizontalExpand="True"
                  VerticalExpand="True">
        <BoxContainer Orientation="Vertical" HorizontalExpand="True" HorizontalAlignment="Center" VerticalExpand="True">
            <Label Text="{Loc 'st-radio-headset-frequency-label'}" HorizontalAlignment="Center"/>
            <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center">
                <LineEdit Name="FrequencyPrefixInput" MinWidth="50" MaxWidth="50" HorizontalAlignment="Center"/>
                <Label Text="." VerticalAlignment="Center" Margin="2 0 2 0"/>
                <LineEdit Name="FrequencySuffixInput" MinWidth="25" MaxWidth="25" HorizontalAlignment="Center"/>
            </BoxContainer>
        </BoxContainer>
        <BoxContainer Orientation="Vertical" HorizontalAlignment="Center" HorizontalExpand="True" Margin="0 2 0 0" VerticalExpand="True">
            <Button Name="MicButton" ToggleMode="True" Text="{Loc 'st-radio-headset-mic-button'}" MinWidth="70" HorizontalExpand="True"/>
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
