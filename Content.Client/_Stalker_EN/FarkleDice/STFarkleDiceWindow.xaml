<controls:FancyWindow
    xmlns="https://spacestation14.io"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    xmlns:gfx="clr-namespace:Robust.Client.Graphics;assembly=Robust.Client"
    Title="{Loc 'farkle-dice-window-title'}"
    MinSize="700 480"
    SetSize="700 480">
    <BoxContainer Orientation="Vertical" VerticalExpand="True" Margin="8">
        <Label Name="TargetScoreLabel" StyleClasses="LabelHeading" HorizontalAlignment="Center" Margin="0 0 0 8" />

        <BoxContainer Name="TargetScorePresets" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 4">
            <Button Name="Score2000" Text="2,000" MinWidth="70" Margin="2" />
            <Button Name="Score3000" Text="3,000" MinWidth="70" Margin="2" />
            <LineEdit Name="CustomTargetScoreInput"
                      PlaceHolder="{Loc 'farkle-custom-target-placeholder'}"
                      MinWidth="120"
                      Margin="2" />
            <Button Name="SetTargetScoreButton"
                    Text="{Loc 'farkle-set-target-button'}"
                    MinWidth="50"
                    Margin="2" />
        </BoxContainer>

        <PanelContainer Margin="0 0 0 8">
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#1C1F17" />
            </PanelContainer.PanelOverride>
            <BoxContainer Orientation="Horizontal" Margin="8">
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <Label Name="Player1Label" HorizontalAlignment="Center" StyleClasses="LabelSubText" />
                    <Label Name="Player1ScoreLabel" HorizontalAlignment="Center" StyleClasses="LabelHeading" />
                </BoxContainer>
                <Control MinWidth="20" />
                <BoxContainer Orientation="Vertical" HorizontalExpand="True">
                    <Label Name="Player2Label" HorizontalAlignment="Center" StyleClasses="LabelSubText" />
                    <Label Name="Player2ScoreLabel" HorizontalAlignment="Center" StyleClasses="LabelHeading" />
                </BoxContainer>
            </BoxContainer>
        </PanelContainer>

        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 8">
            <Label Text="{Loc 'farkle-turn-score'}" />
            <Label Name="TurnScoreLabel" StyleClasses="LabelHeading" Margin="8 0 0 0" />
        </BoxContainer>

        <PanelContainer Margin="0 0 0 8">
            <PanelContainer.PanelOverride>
                <gfx:StyleBoxFlat BackgroundColor="#2A2517" />
            </PanelContainer.PanelOverride>
            <Label Name="StatusLabel" HorizontalAlignment="Center" Margin="8" />
        </PanelContainer>

        <BoxContainer Name="DiceContainer" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 8" SeparationOverride="8" />

        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 0 0 8">
            <Label Text="{Loc 'farkle-selection-score'}" />
            <Label Name="SelectionScoreLabel" Margin="8 0 0 0" />
        </BoxContainer>

        <BoxContainer Orientation="Horizontal" HorizontalAlignment="Center" VerticalExpand="True" VerticalAlignment="Bottom">
            <Button Name="JoinButton" Text="{Loc 'farkle-join-button'}" MinWidth="80" Margin="4" />
            <Button Name="LeaveButton" Text="{Loc 'farkle-leave-button'}" MinWidth="80" Margin="4" />
            <Button Name="RollButton" Text="{Loc 'farkle-roll-button'}" MinWidth="80" Margin="4" />
            <Button Name="KeepButton" Text="{Loc 'farkle-keep-button'}" MinWidth="100" Margin="4" />
            <Button Name="BankButton" Text="{Loc 'farkle-bank-button'}" MinWidth="80" Margin="4" />
            <Button Name="NewGameButton" Text="{Loc 'farkle-new-game-button'}" MinWidth="100" Margin="4" />
        </BoxContainer>
    </BoxContainer>
</controls:FancyWindow>
